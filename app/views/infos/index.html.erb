<div class="col-md-12">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">个人信息</h3>
    </div>
    <div class="form-horizontal">
      <div class="box-body">
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-sm-3 control-label">用户昵称</label>
            <div class="col-sm-9padding-left-none">
              <span class="form-control border-none"> <%= current_user.name %> </span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">用户邮箱</label>
            <div class="col-sm-9padding-left-none">
              <span class="form-control border-none"> <%= current_user.email %> </span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">个人邀请码</label>
            <div class="col-sm-9padding-left-none">
              <span class="form-control border-none"> <%= current_user.invitation_code_in_word %> </span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">上级邀请码</label>
            <div class="col-sm-9padding-left-none">
              <span class="form-control border-none"> <%= current_user.h_invitation_code %> </span>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-sm-3 control-label">会员级别</label>
            <div class="col-sm-9 padding-left-none">
              <span class="form-control border-none"> <%= current_user.level_id %> </span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">订单总数</label>
            <div class="col-sm-9 padding-left-none">
              <span class="form-control border-none"> <%= @orders_count %> </span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">消费总额</label>
            <div class="col-sm-9 padding-left-none">
              <span class="form-control border-none"> <%= @total_spend  || 0 %> </span>
            </div>
          </div>
        </div>
    </div>
    </div>
  </div>
</div>

<div class="col-md-12">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title">业务信息</h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>商品名</th>
          <th class="bg-green">我的特价</th>
          <th class="<%= current_price(1) %>">级别1价格</th>
          <th class="<%= current_price(2) %>">级别2价格</th>
          <th class="<%= current_price(3) %>">价格3价格</th>
          <th class="<%= current_price(4) %>">价格4价格</th>
        </tr>
        <% @goods.each do |goods| %>
          <tr>
            <td ><%= goods.name %></td>
            <th class="bg-green"><%= current_user.current_goods_special_prices(goods.id) %> </th>
            <td class="<%= current_price(1) %>"><%= goods.get_current_price(1) %></td>
            <td class="<%= current_price(2) %>"><%= goods.get_current_price(2) %></td>
            <td class="<%= current_price(3) %>"><%= goods.get_current_price(3) %></td>
            <td class="<%= current_price(4) %>"><%= goods.get_current_price(4) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

