<div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">修改订单</h3>
      </div>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :goods_id, '业务', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.select :goods_id, Goods.all.collect { |g| [ g.name, g.id ] }, {}, disabled: true, class: 'form-control goods-id' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :price_current, '单价', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_field :price_current, class: 'form-control', readonly: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :count, '购买数量', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_field :count, class: "form-control", placeholder: '填写购买数量', readonly: true%>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :remark, '备注', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_area :remark, class: 'form-control', rows: 5, placeholder: '你需要通知商家的信息请在这里填写' %>
          </div>
        </div>
      </div>
      <div class="box-footer clearfix">
        <%= link_to  '放弃修改', orders_path, class: 'btn btn-default'%>
        <%= f.submit '提交修改', class: 'btn btn-primary' %>
      </div>
    </div>
</div>
