<%= form_for @special_price, html: {:class => 'form-horizontal'} do |f| %>

<div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">修改特价</h3>
      </div>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :good_name, '业务', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_field :good_name, value: @special_price.goods.name, class: 'form-control', autocomplete: 'off', readonly: true %>
            <%= f.hidden_field :goods_id %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :user_name, '用户', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_field :user_name, value: "#{@special_price.user.email}" , autocomplete: 'off', class: 'form-control', readonly: true %>
            <%= f.hidden_field :user_id %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :price, '特价', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_field :price, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :remark, '备注', class: 'col-sm-1 control-label'%>

          <div class="col-sm-5">
            <%= f.text_area :remark, class: 'form-control', rows: 5, placeholder: '备注信息' %>
          </div>
        </div>
      </div>
      <div class="box-footer clearfix">
        <%= link_to  '放弃修改', user_special_prices_special_prices_path(user_id: @special_price.user.id), class: 'btn btn-default'%>
        <%= f.submit '提交修改', class: 'btn btn-primary' %>
      </div>
    </div>
</div>
<% end %>
