<div class="col-md-12">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">商品：<%= "#{@goods.name}(ID:#{@goods.id})" %></h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>用户</th>
          <th>系统价格</th>
          <th>上级特价</th>
          <th>管理员特价</th>
        </tr>
        <% @special_prices.each do |price| %>
          <tr>
            <% user = price.user %>
            <td><%= user.email %></td>
            <td><%= @goods.get_current_price(user.level_id) %></td>
            <td><%= user.current_goods_h_set_price(@goods.id) %></td>
            <td><%= price.price %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
