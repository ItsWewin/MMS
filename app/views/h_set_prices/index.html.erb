<div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">下级特价</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th>商品</th>
            <th>特价</th>
            <th>操作</th>
          </tr>
          <% @h_set_prices.each do |price| %>
            <tr>
              <td><%= price.goods.name %></td>
              <td><%= price.price %></td>
              <td>
                <%= link_to '编辑', edit_h_set_price_path(price), remote: true %>
                <%= link_to '删除', h_set_price_path(price), data: { confirm: '确认删除？'}, method: 'DELETE' %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="box-footer clearfix">
        <ul class="pagination pagination-sm inline">
        </ul>
      </div>
    </div>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#new-h-set-price-modal">
      添加新特价
    </button>
</div>
<div id='edit-h-set-price'>
</div>

<div class="modal fade" id="new-h-set-price-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">为用户添加特价</h4>
      </div>
      <%= form_for HSetPrice.new, html: {:class => 'form-horizontal'} do |f| %>
        <div class="modal-body">
            <div class="box-body">
              <%= f.hidden_field :user_id, value: @user.id %>
              <div class="form-group">
                <%= f.label :goods_id, '业务', class: 'col-sm-2 control-label '%>

                <div class="col-sm-10">
                  <%= f.select :goods_id, Goods.all.collect { |g| [ g.name, g.id ] }, {}, class: 'form-control goods-id' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :price, '特价', class: 'col-sm-2 control-label'%>

                <div class="col-sm-10">
                  <%= f.text_field :price, value: nil, class: 'form-control', placeholder: '单价' %>
                </div>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">放弃</button>
          <%= f.submit '提交', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
