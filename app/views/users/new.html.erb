<div class="container">
  <%= form_for @user, :html => {class: 'form-signin'} do |f|%>
    <h2 class="form-signin-heading">注册</h2>
    <% @user.errors.messages.each do |key, message| %>
      <li class="text-danger"><%= message[0] %></li>
    <% end %>
    <%= f.text_field(:name, class: 'form-control', placeholder: '用户名') %>
    <%= f.email_field(:email, class: 'form-control', placeholder: '邮箱') %>
    <%= f.password_field(:password, class: 'form-control', placeholder: '密码') %>
    <%= f.password_field(:password_confirmation, class: 'form-control', placeholder: '再次确认密码') %>
    <%= link_to "已有帐号，点击登录", login_path %>
    <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
  <% end -%>
</div>
