<div class="modal fade" id="edit-goods-type-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">编辑分类</h4>
      </div>
      <%= form_tag goods_type_path, method: 'PUT', html: {:class => 'form-horizontal'} do %>

        <div class="modal-body">
            <div class="box-body">
              <div class="form-group">
                <%= hidden_field_tag :id, @type.id %>
                <%= label_tag :name, '分类', class: 'col-sm-2 control-label '%>

                <div class="col-sm-10">
                  <%= text_field_tag :name, @type.name, class: 'form-control goods-id', placeholder: '业务名称' %>
                </div>
              </div><br><br>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">放弃</button>
          <%= submit_tag '提交', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
