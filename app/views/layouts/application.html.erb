<!DOCTYPE html>
<html>
  <head>
    <title>GetCard</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

    <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

      <header class="main-header">
        <%= link_to root_path, class: 'logo' do %>
          <span class="logo-mini"><b>MMS</b></span>
          <span class="logo-lg">会员管理平台</span>
        <% end %>

        <nav class="navbar navbar-static-top">
          <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
          </a>

          <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
              <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="hidden-xs"><%= current_user.name if current_user.present? %></span>
                </a>
                <ul class="dropdown-menu">
                  <li class="user-footer">
                    <div class="pull-right">
                      <%#= link_to '退出', logout_path, clase: 'btn btn-default btn-flat' %>
                      <a href="/sign_out" class="btn btn-default btn-flat">退出</a>
                    </div>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </header>

      <aside class="main-sidebar">
        <section class="sidebar">
          <div class="user-panel">
            <div class="pull-left image">
              <%= image_tag 'user2-160x160.jpg', class: 'img-circle', alt: 'User Image' %>
            </div>
            <div class="pull-left info">
              <p><%= current_user.name  if current_user.present? %></p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>

          <ul class="sidebar-menu" data-widget="tree">
            <li class="header">主菜单</li>

            <li class="<%= current_menu('orders') %>" >
              <%= link_to orders_path do %>
                <i class="fa fa-th"></i> <span>我的订单</span>
              <% end %>
            </li>
            <li class="treeview <%= current_menu('goods') %>">
              <a href="#">
                <i class="fa fa-pie-chart"></i>
                <span>业务购买</span>
                <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
              </a>
              <ul class="treeview-menu">
                <% Goods.all.each do |goods| %>
                  <li class="<%= current_goods(goods.id)  %>">
                    <%= link_to good_path(goods.id)  do %>
                     <i class="fa fa-circle-o"></i>
                     <%= goods.name %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
            </li>
            <li class="<%= current_menu('infos') %>" >
              <%=link_to infos_path do %>
                <i class="fa fa-book"></i><span>信息管理</span>
              <% end %>
            </li>
            <% if current_user.admin != 0 %>
              <li class="<%= current_menu('admins') %>" >
                <%=link_to orders_admins_path(status: 'Waiting') do %>
                  <i class="fa fa-book"></i><span>管理员入口</span>
                <% end %>
              </li>
            <% end %>
            <li>
              <a>
                <i ><span></span></i>
              </a>
            </li>
          </ul>
        </section>
      </aside>

      <div class="content-wrapper">
        <section class="content-header">
          <h1>
            <%= content_header %>
            <small>Control</small>
          </h1>
          <ol class="breadcrumb">
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-dashboard"></i>
                Home
              <% end %>
            </li>
            <li class="active"><%= content_header %></li>
          </ol>
        </section>

        <section class="content">
          <div class="row">
            <%= yield %>
          </div>
        </section>

      </div>

      <footer class="main-footer">
        <div class="pull-right hidden-xs">
          <b>Version</b> 2.4.0
        </div>
        <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
        reserved.
      </footer>

      <div class="control-sidebar-bg"></div>
    </div>
  </body>
</html>
