<% if Notice.first.content.present? %>
  <div class="col-md-12">
    <div class="callout callout-success">
      <h4>系统公告!</h4>
      <p><%= Notice.first.content %></p>
    </div>
  </div>
<% end %>
<%= render 'layouts/errors'%>
<div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">业务信息</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th style="width: 75px">名称</th>
            <th>级别一价格</th>
            <th>级别二价格</th>
            <th>级别三价格</th>
            <th>级别四价格</th>
            <th>我的特价</th>
          </tr>
          <tr>
            <td><%= @goods.name %></td>
            <td><span class="<%= price_light?(@goods.get_current_price(1), @goods.id) %>"><%= @goods.get_current_price(1) %></span></td>
            <td><span class="<%= price_light?(@goods.get_current_price(2), @goods.id) %>"><%= @goods.get_current_price(2) %></span></td>
            <td><span class="<%= price_light?(@goods.get_current_price(3), @goods.id) %>"><%= @goods.get_current_price(3) %></span></td>
            <td><span class="<%= price_light?(@goods.get_current_price(4), @goods.id) %>"><%= @goods.get_current_price(4) %></span></td>
            <td><span class="bg-green"><%= current_user.current_goods_special_prices(@goods.id)%></span></td>
          </tr>
        </table>
      </div>
      <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-left">
          <%= link_to '下单', new_order_path(goods_id: @goods.id), class: 'btn btn-primary' %>
        </ul>
      </div>
    </div>
</div>

<style>
  .digg_pagination .pagination{
      margin: 0px !important;
      padding: 0px !important;
  }
  .error{
    color: #a94442;
    font-size: 12px;
  }
</style>
