<div class="col-md-12 controll-button">
  <%= render 'controll_button' %>
</div>

<%= render partial: 'order_search_form' %>

<div class="col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <%= render 'order_controll_link' %>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <tr>
            <th style="width: 75px">ID</th>
            <th>下单用户</th>
            <th>业务</th>
            <th>下单账号</th>
            <th class="count-th">数量</th>
            <th class="count-th">单价</th>
            <th class="count-th">总价</th>
            <th class="count-th">初始</th>
            <th class="count-th">目标</th>
            <th class="count-th">当前</th>
            <th>下单日期</th>
            <th>备注</th>
            <th class="status-th">状态</th>
            <th class="operation-th">操作</th>
          </tr>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.identification_code %></td>
              <td><%= order.user.email %></td>
              <td><%= order.goods.name rescue '' %></td>
              <td class="count-td"><%= order.account %></td>
              <td class="count-td"><%= order.count %></td>
              <td class="count-td"><%= order.price_current %></td>
              <td class="count-td"><%= order.total_price %></td>
              <td class="count-td"><%= order.start_num %></td>
              <td class="count-td"><%= order.aims_num %></td>
              <td class="count-td"><%= order.current_num %></td>
              <td><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
              <td><%= order.remark %></td>
              <td class="status-td"><%= order.status_in_word_admin %></td>
              <td class="operation-th">
                <%= render :partial => 'operation_link', :locals =>{ order_id: order.id, status: order.status } %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="box-footer clearfix">
        <ul class="pagination pagination-sm inline">
          <%= paginate @orders %>
        </ul>
      </div>
    </div>
</div>

<style>
  .link_active{
    color: green;
  }
</style>
