<div class="col-md-12 controll-button">
  <%= render 'controll_button' %>
</div>

<div class="col-md-12">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">会员信息</h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>ID</th>
          <th>邮箱</th>
          <th>等级</th>
          <th>下级会员数</th>
          <th>订单总数</th>
          <th>消费总额</th>
          <th>邀请码</th>
          <th>管理</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.level_id %></td>
            <td><%= user.id %></td>
            <td><%= user.orders.count %></td>
            <td><%= user.total_spend %></td>
            <td><%= user.invitation_code %></td>
            <td><%= link_to '用户特价信息', user_special_prices_special_prices_path(user_id: user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <%= link_to '会员级别规则', levels_path %>

</div>
