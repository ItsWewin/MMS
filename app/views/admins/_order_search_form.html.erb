<div class="col-md-12">
  <div class="box">
    <%= form_tag orders_admins_path, method: 'get' do %>
      <div class="box-body">
        <div class="form-group">
          <%= hidden_field_tag :status, params[:status] %>
          <div class="col-xs-2">
            <%= label_tag '用户' %>
            <%= select_tag :user_id, options_from_collection_for_select(User.all, 'id', 'email', params['user_id']), include_blank: true, class: 'form-control select-user' %>
          </div>

          <div class="col-xs-2">
            <%= label_tag '业务类型' %>
            <%= select_tag :goods_id, options_from_collection_for_select(Goods.all, 'id', 'name', params['goods_id']), include_blank: true, class: 'form-control single-select' %>
          </div>
          <div class="col-xs-2">
            <label for="exampleInputEmail1">下单账号</label>
            <%= text_field_tag :account, params['account'], class: 'form-control', placeholder: '下单账号' %>
          </div>
          <div class="col-xs-2">
            <label for="exampleInputEmail1">备注信息</label>
            <%= text_field_tag :remark, params['remark'], class: 'form-control', placeholder: '备注信息'%>
          </div>
          <div class="col-xs-2">
            <label ></label>
            <%= submit_tag '查询', class: 'btn btn-block btn-primary btn-flat make-line'%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(".select-user").select2({
      placeholder: "选择用户",
      allowClear: true
    });
    $(".single-select").select2({
      placeholder: "选择业务",
      allowClear: true
    });
</script>
