<div class="col-md-12">
  <div class="box">
    <%= form_tag users_admins_path, method: 'get' do %>
      <div class="box-body">
        <div class="form-group">
          <div class="col-xs-2">
            <%= label_tag '会员' %>
            <%= select_tag :user_id, options_from_collection_for_select(User.all, 'id', 'email', params['user_id']), include_blank: true, class: 'form-control select-user' %>
          </div>
          <div class="col-xs-2">
            <label ></label>
            <%= submit_tag '查询', class: 'btn btn-block btn-primary btn-flat make-line'%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(".select-user").select2({
      placeholder: "选择会员",
      allowClear: true
    });
</script>
