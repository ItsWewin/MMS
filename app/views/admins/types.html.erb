<div class="col-md-12 controll-button">
  <%= render 'controll_button' %>
</div>

<div class="col-md-12 goods-type-info">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">分类信息</h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tr>
          <th>分类</th>
          <td>管理</td>
        </tr>
        <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td>
              <%= link_to '修改', edit_goods_type_path(type.id), remote: true %>
              <%= link_to '删除', goods_type_path(type.id), method: 'DELETE', data: { confirm: '确定删除？' } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="box-footer clearfix">
      <ul class="pagination pagination-sm inline">
        <%= paginate @types %>
      </ul>
    </div>
  </div>
  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#goods-type-modal">
    添加分类
  </button>
</div>

<div id='add_edit_goods_type_modal'></div>

<div class="modal fade" id="goods-type-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">新分类</h4>
      </div>
      <%= form_tag goods_types_path, method: 'post', html: {:class => 'form-horizontal'} do %>

        <div class="modal-body">
            <div class="box-body">
              <div class="form-group">
                <%= label_tag :name, '分类', class: 'col-sm-2 control-label '%>

                <div class="col-sm-10">
                  <%= text_field_tag :name, nil, class: 'form-control goods-id', placeholder: '业务名称' %>
                </div>
              </div><br><br>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">放弃</button>
          <%= submit_tag '提交', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
