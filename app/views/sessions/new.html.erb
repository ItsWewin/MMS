<div class="container">
  <%= form_tag sessions_path, class: 'form-signin', method: :post do %>
    <h2 class="form-signin-heading">登录</h2>
    <%= text_field_tag :email, nil, class: "form-control" %>
    <%= password_field_tag :password, nil, class: "form-control" %>
    <div class="checkbox">
      <label>
        <input type="checkbox" naem="remember_me">记住我 <%= link_to "注册", new_user_path %>
      </label>
    </div>
    <%= submit_tag "登录", class: "btn btn-lg btn-primary btn-block"  %>
  <% end %>
</div>
